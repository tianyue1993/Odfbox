<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    tools:context="com.odfbox.activity.PhoneValidateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/commen_bg"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_edit_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iamge1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_phone" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iamge1"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/grey" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:src="@mipmap/ic_delete"
                android:visibility="invisible" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_validate"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:id="@+id/validate"
                android:layout_width="180dp"
                android:layout_height="46dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/login_edit_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iamge2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_validate" />

                <EditText
                    android:id="@+id/validate_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iamge2"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@+id/iamge2"
                    android:layout_toRightOf="@+id/iamge2"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textColor="@color/text_grey"
                    android:textColorHint="@color/grey" />

            </RelativeLayout>

            <Button
                android:id="@+id/send_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/validate"
                android:background="@color/button_bg"
                android:text="获取验证码"
                android:textSize="12sp" />
        </RelativeLayout>


        <Button
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="70dp"
            android:background="@color/colorPrimary"
            android:scaleType="fitXY"
            android:text="确定"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>
