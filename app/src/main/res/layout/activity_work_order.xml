<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    tools:context="com.odfbox.activity.WorkOrderActivity">


    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_search"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="涉及78"
        android:textColor="@color/button_bg"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/ll_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_undo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/things_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="待办工单"
            android:textColor="@color/text_grey"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkbox_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/things_selector"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="查询工单"
            android:textColor="@color/text_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <com.odfbox.views.DownPullRefreshListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_type"
        android:dividerHeight="5dp"></com.odfbox.views.DownPullRefreshListView>

    <RelativeLayout
        android:id="@+id/ll_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <EditText
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_describe"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="工单号"
            android:textColor="@color/text_grey"
            android:textColorHint="@color/grey"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_below="@+id/code"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ed_type"
            android:background="@color/white"
            android:textColor="@color/text_grey"
            android:textColorHint="@color/grey"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/code"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ed_type"
            android:background="@color/white"
            android:textColor="@color/text_grey"
            android:textColorHint="@color/grey"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/starttime"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_below="@+id/spinner1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="开始时间"
            android:textColor="@color/text_grey"
            android:textColorHint="@color/grey"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/endtime"
            android:layout_width="140dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spinner1"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="结束时间"
            android:textColor="@color/text_grey"
            android:textColorHint="@color/grey"
            android:textSize="12sp" />

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/endtime"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/button_bg"
            android:scaleType="fitXY"
            android:text="查询"
            android:textColor="@color/white" />

    </RelativeLayout>
</RelativeLayout>
